{
  "name": "BizPOS",
  "version": "1.0.1",
  "description": "Modern POS Software - BizPOS",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node --max-old-space-size=4096 node_modules/next/dist/bin/next build",
    "start": "next start",
    "build:standalone": "next build && node server.js",
    "lint": "next lint",
    "electron": "cross-env ELECTRON_IS_DEV=1 electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_IS_DEV=1 electron .\"",
    "electron-rebuild": "electron-rebuild",
    "postinstall": "echo Skipping postinstall",
    "build-win": "npm run build && electron-builder --win -c.npmRebuild=false",
    "build-win-with-rebuild": "npm run build && npm run electron-rebuild && electron-builder --win",
    "build-win-nosign": "npm run build && npx electron-builder --win -c.npmRebuild=false -c.win.sign=false",
    "package-win": "npx electron-builder --win -c.npmRebuild=false",
    "update-edgedriver": "node download-edgedriver.js",
    "check-edge": "node scripts/check-edge-version.js",
    "clean": "rimraf out dist .next node_modules/.cache"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "electron-log": "^5.4.3",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.23.12",
    "jimp": "^1.6.0",
    "jspdf": "^4.1.0",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.539.0",
    "net": "^1.0.2",
    "next": "15.4.6",
    "node-thermal-printer": "^4.5.0",
    "path": "^0.12.7",
    "postcss": "^8.5.6",
    "qrcode-terminal": "^0.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.1.2",
    "selenium-webdriver": "^4.36.0",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "chromedriver": "^141.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.BizPOS.pos",
    "productName": "BizPOS-POS-Software",
    "publish": [
      {
        "provider": "github",
        "owner": "airoxlab",
        "repo": "bizposcashierportal"
      }
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/drivers",
        "to": "drivers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "electron/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "electron/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
